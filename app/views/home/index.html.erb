<%# Table to show each crypto currency information %>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">24h Low</th>
      <th scope="col">24h High</th>
      <th scope="col">Market Cap</th>
    </tr>
  </thead>
  <tbody>
<% @prices["DISPLAY"].each do |key, value| %>
    <tr>
      <th scope="row"><%= key %></th>
      <td><%= value["USD"]["PRICE"] %></td>
      <td><%= value["USD"]["HIGHDAY"] %></td>
      <td><%= value["USD"]["LOWDAY"] %></td>
      <td><%= value["USD"]["MKTCAP"] %></td>
    </tr>
<% end %>
  </tbody>
</table>

<%# Cyrpto News from Crypto Compare API %>

<div class="row">
<% for x in @news["Data"] %>
  <div class="col-sm">
    <div class="card my-3 mx-auto" style="width: 18rem;">
    <img src="<%= x["imageurl"]%>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= x["title"] %></h5>
        class="card-text"><%= x["body"].truncate(150) %></>
        <a href="<%= x["url"]%>" class="btn btn-secondary">Read more</a>
      </div>
    </div>
  </div>
<% end %>
</div>
